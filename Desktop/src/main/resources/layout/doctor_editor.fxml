<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="340" prefWidth="400" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kabc.desktop.controller.DoctorEditorController">

    <Label layoutX="35" layoutY="9" prefHeight="50" prefWidth="400" text="Информация о специалисте"
           textAlignment="CENTER">
        <font>
            <Font name="Arial Bold" size="22"/>
        </font>
    </Label>

    <Label layoutX="60" layoutY="80" text="Фамилия"/>
    <TextField fx:id="surnameField" layoutX="60" layoutY="100" prefWidth="280"/>
    <Label fx:id="surnameErrorLabel" layoutX="60" layoutY="126" text="Обязательно для заполнения" textFill="RED"
           visible="false">
        <font>
            <Font size="11"/>
        </font>
    </Label>

    <Label layoutX="60" layoutY="145" text="Имя"/>
    <TextField fx:id="nameField" layoutX="60" layoutY="165" prefWidth="280"/>
    <Label fx:id="nameErrorLabel" layoutX="60" layoutY="191" text="Обязательно для заполнения" textFill="RED"
           visible="false">
        <font>
            <Font size="11"/>
        </font>
    </Label>

    <Label layoutX="60" layoutY="210" text="Отчество"/>
    <TextField fx:id="lastnameField" layoutX="60" layoutY="230" prefWidth="280"/>

    <Button fx:id="cancelButton" layoutX="60" layoutY="285" mnemonicParsing="false" prefWidth="130"
            text="Отмена"/>
    <Button fx:id="saveButton" layoutX="210" layoutY="285" mnemonicParsing="false" prefWidth="130"
            text="Сохранить"/>
</AnchorPane>
