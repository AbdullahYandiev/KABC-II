<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context="com.kabc.android.tests.ConceptualThinking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:translationZ="90dp"
            app:srcCompat="@drawable/home"
            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/nextLevelButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:translationZ="90dp"
            app:srcCompat="@drawable/next_level"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,ImageContrastCheck" />

        <TextView
            android:id="@+id/taskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/conceptual_thinking_task"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/resultView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:translationZ="90dp" />
    </RelativeLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/answer0"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:padding="3dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/answer1"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:padding="3dp" />

        <ImageButton
            android:id="@+id/answer2"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:padding="3dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/answer3"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:padding="3dp" />

        <ImageButton
            android:id="@+id/answer4"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/loading_image"
            android:scaleType="centerInside"
            android:padding="3dp" />
    </TableRow>
</LinearLayout>